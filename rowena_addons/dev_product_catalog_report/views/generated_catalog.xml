<odoo>
    <!--tree-->
    <record id="tree_generated_catalog_dev_product_catalog_report" model="ir.ui.view">
        <field name="name">tree.generated.catalog.dev.product.catalog.report</field>
        <field name="model">generated.catalog</field>
        <field name="arch" type="xml">
            <tree string="Generate Catalog List" create="false">
                <field name="name" readonly="1"/>
                <field name="generated_on" readonly="1"/>
                <field name="user_id" readonly="1"/>
                <button name="download_pdf" type="object" icon="fa-download"/>
                <button name="send_by_mail" type="object" icon="fa-envelope"/>
            </tree>
        </field>
    </record>

    <!--search-->
    <record id="search_generated_catalog_dev_product_catalog_report" model="ir.ui.view">
        <field name="name">Catalog - Search</field>
        <field name="model">generated.catalog</field>
        <field name="arch" type="xml">
            <search string="Catalog Search">
                <field name="name"/>
                <group expand="0" string="Group By" colspan="16">
                    <filter name="user_id" string="Generated By" context="{'group_by':'user_id'}"/>
                </group>
            </search>
        </field>
    </record>

    <!--Action-->
    <record id="action_generated_catalog_dev_product_catalog_report" model="ir.actions.act_window">
        <field name="name">Generated Product Catalog</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">generated.catalog</field>
        <field name="view_mode">tree</field>
    </record>

    <!--Menus-->
    <menuitem name="Generated Product Catalog"
              id="menu_generated_product_catalog"
              parent="main_menu_product_catalog"
              action="action_generated_catalog_dev_product_catalog_report"
              sequence="2"/>
</odoo>
